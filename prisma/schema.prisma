generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  passwordHash String

  entries EntriesByDay[]
}

model EntriesByDay {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  dayKey    String
  clientName String
  amount    Int
  cost      Int?
  completed Boolean? @default(false)

  @@index([userId, dayKey])
}
