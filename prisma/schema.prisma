generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  passwordHash String

  entries EntriesByDay[]
  contractors Contractor[]
}

model Contractor {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  name   String

  entries EntriesByDay[]

  @@unique([userId, name])
  @@index([userId])
}

model EntriesByDay {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  dayKey      String
  clientName  String
  contractor  Contractor? @relation(fields: [contractorId], references: [id], onDelete: SetNull)
  contractorId String?
  description String? // Описание заявки (необязательно)
  serviceType String? @default("individual") // individual | group
  amount      Int
  cost        Int?
  duration    Int?    // Длительность в секундах (необязательно)
  completed   Boolean? @default(false)

  @@index([userId, dayKey])
}
